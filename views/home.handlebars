<div class="jumbotron text-center mb-5">
    <h1 class="display-4">Roman numerals conversion</h1>
</div>
<div class="container">
    <h1 class="text-center mb-5">Convert from arabe to roman</h1>
    <form action="/" method="post">
        <div class="row">
            <div class="col-4">
                <input type="number" id="number" name="arabe" class="form-control" placeholder="Enter a number"
                    value="{{number.arabe}}">
            </div>
            <div class="col-4">
                <button type="submit" id="convert" class="btn btn-primary">Convert</button>
            </div>
            <div class="col-4">
                <input type="text" id="result" class="form-control" placeholder="Result" disabled value="{{result.roman}}">
            </div>
        </div>
    </form>
</div>
<hr class="my-5">
<div class="container">
    <h1 class="text-center mb-5">Convert from roman to arabe</h1>
    <form action="/" method="post">
        <div class="row">
            <div class="col-4">
                <input type="text" id="roman" name="roman" class="form-control" placeholder="Enter a roman number"
                    value="{{number.roman}}">
            </div>
            <div class="col-4">
                <button type="submit" id="convert" class="btn btn-primary">Convert</button>
            </div>
            <div class="col-4">
                <input type="text" id="result" class="form-control" placeholder="Result" disabled value="{{result.arabe}}">
            </div>
        </div>
    </form>
</div>